<!DOCTYPE html>
<html>
  <head>
    <title>RoRGroupProject</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    
    <!-- Include Bootstrap 4 CSS from a valid CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <%= link_to 'Home', authenticated_root_path  %>

      <ul class="navbar-nav mr-auto">
        <li class="nav-item">
          <%= link_to 'Foods', foods_path, class: 'nav-link' %>
        </li>
        <li class="nav-item">
          <%= link_to 'Recipes', recipes_path, class: 'nav-link' %>
        </li>
      </ul>

      <ul class="navbar-nav">
        <% if Recipe.any? %>
  <li class="nav-item">
    <%= link_to 'Recipes details', recipe_path(Recipe.first), class: 'nav-link' %>
  </li>
<% end %>

          <li class="nav-item">
            <%= link_to 'Add Food', new_food_path, class: 'nav-link' %>
          </li>
          <li class="nav-item">
            <%= link_to 'Add Recipe', new_recipe_path, class: 'nav-link' %>
          </li>
      </ul>
    </nav>

    <div class="container">
      <%= flash[:alert] %>
      <%= flash[:notice] %>
      <%= yield %>
    </div>
  </body>
</html>
