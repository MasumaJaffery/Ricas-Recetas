<div class="container">
  <table class="table table-bordered table-responsive">
    <tr>
      <td colspan="2">
        <% if @recipe.user == current_user %>
          <%= link_to 'Delete Recipe', @recipe, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger mb-3' %>
        <% end %>
      </td>
    </tr>
    <tr>
      <td colspan="2">
        <h1 class="display-4"><%= @recipe.name %></h1>
        <p class="lead"><%= @recipe.description %></p>
      </td>
    </tr>
    <!-- Toggle Button for Public/Private -->
    <% if @recipe.user == current_user %>
      <tr>
        <td><label>Recipe Privacy:</label></td>
        <td>
          <%= button_to (@recipe.public? ? 'Make Private' : 'Make Public'), toggle_privacy_recipe_path(@recipe), method: :patch, class: 'btn btn-primary' %>
        </td>
      </tr>
    <% end %>

    <!-- Preparation Time -->
    <tr>
      <td><label>Preparation Time:</label></td>
      <td><%= @recipe.preparation_time %> minutes</td>
    </tr>
       <!-- Generate Shopping List Link -->
    <tr>
      <td colspan="2">
       <%= link_to 'Generate Shopping List', shopping_list_path, class: 'btn btn-primary' %>

      </td>
    </tr>
  </table>
</div>

